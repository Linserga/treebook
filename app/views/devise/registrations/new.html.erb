<div class='row'>
  <div class='col-md-4'>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'well'}) do |f| %>
      <fieldset>
        <legend>Register</legend>
        <%= devise_error_messages! %>

        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :profile_name %>
        <%= f.input :email, autofocus: true, placeholder: 'user@domain.com' %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <br>
        <%= f.button :submit, 'Sign up', class: 'btn btn-success' %>  
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
